<footer class="slater-footer">
    <div class="outer">
        <div class="container--l mxa">
            <div class="slater-footer__inner f aic jcb">
                {% assign footer_menu = section.settings.footer_menu %}
                {% if linklists[footer_menu].links.size > 0 %}
                    <ul class="f aic">
                        {% for link in linklists[footer_menu].links %}
                            <li class="mr1 pr1">
                                <a href="{{ link.url }}">{{ link.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <div class="">
                    {% if customer %}
                        <a href="/account">Account</a>
                    {% else %}
                        <a href="/account/login">Log In</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</footer>

{% schema %}
{
    "name": "Footer",
    "settings": [
        {
            "type": "link_list",
            "id": "footer_menu",
            "label": "Menu",
            "default": "footer"
        }
    ]
}
{% endschema %}
